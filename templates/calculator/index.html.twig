{% extends 'base.html.twig' %}

{% block title %}Hello CalculatorController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if answer is defined and answer is not empty %}
        <h1>
            {{ answer }}
        </h1>
    {% endif %}
    {% if errors is defined and errors is not empty %}
        <ul>
            {% for error in errors %}
                <li>{{ error }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <form method="post" action="{{ path('app_calculator.calculate') }}">
        <input name="number1" type="text" class="form-control" style="width: 150px; display: inline"/>
        <select name="operation">
            <option value="plus">Plus</option>
            <option value="minus">Minus</option>
            <option value="times">Times</option>
            <option value="divided by">Divided By</option>
        </select>
        <input name="number2" type="text" class="form-control" style="width: 150px; display: inline"/>
        <input type="submit" value="Calculate" class="btn btn-primary"/>
    </form>
    <form action="{{ path('app_calculator.process') }}" method="post">
        <button type="submit">Process</button>
    </form>

    {% if results is defined and results is not empty %}
        <ul>
            {% for result in results %}
                <li>{{ result }}</li>
            {% endfor %}
        </ul>
    {% endif %}
</div>
{% endblock %}
